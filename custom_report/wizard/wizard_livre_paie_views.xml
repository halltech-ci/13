<odoo>
    <record id="livre_report_wizard" model="ir.ui.view" >
        <field name="name">Livre Paie Report</field>
        <field name="model">livre.paie.report.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Livre Paie Report">
                <group>
                    <group>
                        <field name="employee"/>
                    </group>
                    <group>
                        <field name="date_start"/>
                    </group>
                    <group>
                        <field name="date_end"/>
                    </group>
                </group>
                <footer>
                    <button name="get_report" string="Get Report" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window 
        id="action_livre_paie_report_wizard"
        name="Livre Paie Report"
        res_model="livre.paie.report.wizard"
        view_mode="form"
        target="new"
        />

    <menuitem 
        id="menu_livre_paie_report_wizard"
        action="action_livre_paie_report_wizard"
        name = "Rapport Livre Paie"
        sequence="12"
        parent="hr_payroll.menu_hr_payroll_report"
        />
</odoo>